@{
    ViewData["Title"] = "Delete Song";
}

@model ApplicationResponse
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.Title from @Model.Year?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Waitlist" class="btn-primary">Cancel</a>
    <input type="hidden" asp-for="MovieID"/>
</form>