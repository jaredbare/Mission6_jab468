@{      ViewData["Title"] = "Dating Application";
}

@model Mission6_jab468.Models.ApplicationResponse

<h1>Fill out the Movie Form!</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="CategoryID">Movie Category</label>
        <select asp-for="CategoryID">
            <option value="">Select a Genre</option>
            @foreach (Category category in ViewBag.Categories)
            {
                <option value="@category.CategoryID">@category.CategoryName</option>
            }
        </select>
            <br />
            <label asp-for="Title">Movie Title</label>
            <input asp-for="Title" />
            <br />
            <label asp-for="Year">Release Year</label>
            <input asp-for="Year" />
            <br />
            <label asp-for="DirectorFirstName">Director First Name</label>
            <input asp-for="DirectorFirstName" />
            <br />
            <label asp-for="DirectorLastName">Director Last Name</label>
            <input asp-for="DirectorLastName" />
            <br />
            <label asp-for="Rating">Movie Rating</label>
            <br />
            <label asp-for="Rating">G</label>
            <input type="radio" asp-for="Rating" value="G">
            <label asp-for="Rating">PG</label>
            <input type="radio" asp-for="Rating" value="PG">
            <label asp-for="Rating">PG-13</label>
            <input type="radio" asp-for="Rating" value="PG-13">
            <label asp-for="Rating">R</label>
            <input type="radio" asp-for="Rating" value="R">

            <br />
            <label asp-for="Edited">Edited?</label>
            <select asp-for="Edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />
            <label asp-for="LentTo">Lent to: </label>
            <input asp-for="LentTo" />
            <br />
            <label asp-for="notes">Notes: </label>
            <input asp-for="notes" maxlength="25" />
            <br />

            <button type="submit">Add Movie</button>
</form>
</div>